---
import Layout from '../presentation/layouts/Layout.astro';
import Header from '../presentation/components/Header.astro';
import Footer from '../presentation/components/Footer.astro';
import { translate } from '@/domain';
import { getStringFromTranslations } from '@presentation/utils/translations';
import personalInfoData from '../data/datasources/personalInfoData.json';
import skillsData from '../data/datasources/skillsData.json';
import navigationLabelsData from '../data/datasources/labels/navigationLabels.json';
import commonLabelsData from '../data/datasources/labels/commonLabels.json';
import skillsLabelsData from '../data/datasources/labels/skillsLabels.json';
import footerLabelsData from '../data/datasources/labels/footerLabels.json';
import type { Language } from '@domain/entities/Language';
import type { Skill } from '@domain/entities/Skill';

// Use default language - will be overridden by client-side localStorage
const lang: Language = 'es';

const getString = (value: any): string => {
    return getStringFromTranslations(value, lang);
};

const personalInfo = personalInfoData;
const skills = skillsData;

const labels = {
    ...navigationLabelsData,
    ...commonLabelsData,
    ...skillsLabelsData,
    ...footerLabelsData
};

// Group skills by category
const groupedSkills = skills.reduce((acc: Record<string, Skill[]>, skill: Skill) => {
    if (!acc[skill.category]) acc[skill.category] = [];
    acc[skill.category].push(skill);
    return acc;
}, {} as Record<string, Skill[]>);

const categoryLabels: Record<string, string> = {
    'languages': lang === 'es' ? 'Lenguajes de Programación' : 'Programming Languages',
    'frameworks': 'Frameworks',
    'tools': lang === 'es' ? 'Herramientas' : 'Tools',
    'ides': lang === 'es' ? 'IDEs' : 'IDEs',
    'os': lang === 'es' ? 'Sistemas Operativos' : 'Operating Systems'
};

// Mapeo de IDs a nombres de skillicons.dev
const skillIconsMap: Record<string, string> = {
    // Languages
    'typescript': 'ts',
    'javascript': 'js',
    'python': 'python',
    'swift': 'swift',
    'java': 'java',
    // Frameworks
    'react': 'react',
    'nextjs': 'nextjs',
    'nodejs': 'nodejs',
    'nestjs': 'nestjs',
    'express': 'express',
    'reactnative': 'react',
    'expo': 'expo',
    'tailwind': 'tailwind',
    // Tools
    'docker': 'docker',
    'git': 'git',
    'github': 'github',
    'gitlab': 'gitlab',
    'postgresql': 'postgres',
    'mongodb': 'mongodb',
    'redis': 'redis',
    'aws': 'aws',
    'firebase': 'firebase',
    'figma': 'figma',
    'jest': 'jest',
    'vitest': 'vitest',
    // IDEs
    'vscode': 'vscode',
    'webstorm': 'webstorm',
    'androidstudio': 'androidstudio',
    'xcode': 'xcode',
    // OS
    'windows': 'windows',
    'linux': 'linux',
    'macos': 'apple'
};

const getSkillIconUrl = (skillId: string) => {
    const iconName = skillIconsMap[skillId] || skillId;
    return `https://skillicons.dev/icons?i=${iconName}`;
};

const renderStars = (level: number) => '★'.repeat(level) + '☆'.repeat(5 - level);
---

<Layout lang={lang} title={`${translate(labels.skillsTitle, lang)} - ${personalInfo.name}`} description="All technologies and skills">
    <Header lang={lang} personalInfo={personalInfo} />
    
    <main class="technologies-page">
        <div class="container">
            <div class="page-header">
                <a href="/" class="back-link">← {translate(labels.back, lang)}</a>
                <h1>{translate(labels.skillsTitle, lang)}</h1>
                <p class="page-subtitle">{translate(labels.skillsSubtitle, lang)}</p>
            </div>

            {Object.entries(groupedSkills).map(([category, categorySkills]) => (
                <section class="skill-category-section">
                    <h2>{categoryLabels[category]}</h2>
                    <div class="skills-grid">
                        {categorySkills
                            .sort((a, b) => b.level - a.level || b.yearsOfExperience - a.yearsOfExperience)
                            .map((skill) => (
                                <div class="skill-card">
                                    <div class="skill-icon">
                                        <img 
                                            src={getSkillIconUrl(skill.id)} 
                                            alt={skill.name}
                                            width="64"
                                            height="64"
                                            loading="lazy"
                                        />
                                    </div>
                                    
                                    <h3>{skill.name}</h3>
                                    
                                    <div class="skill-meta">
                                        <span class="skill-stars" title={`${skill.level}/5`}>
                                            {renderStars(skill.level)}
                                        </span>
                                        <span class="skill-experience">
                                            {skill.yearsOfExperience === 1 
                                                ? lang === 'es' ? '1 año' : '1 year'
                                                : lang === 'es' ? `${skill.yearsOfExperience}a` : `${skill.yearsOfExperience}y`
                                            }
                                        </span>
                                    </div>

                                    {skill.description && (
                                        <p class="skill-description">{getString(skill.description)}</p>
                                    )}
                                </div>
                            ))}
                    </div>
                </section>
            ))}
        </div>
    </main>

    <Footer lang={lang} />
</Layout>

<style>
    .technologies-page {
        min-height: 100vh;
        padding: 4rem 0;
        background: linear-gradient(135deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
    }

    .page-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 1.5rem;
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 500;
        transition: all var(--transition-base);
    }

    .back-link:hover {
        transform: translateX(-4px);
    }

    .page-header h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--color-text-primary);
    }

    .page-subtitle {
        font-size: 1.2rem;
        color: var(--color-text-secondary);
        max-width: 600px;
        margin: 0 auto;
    }

    .skill-category-section {
        margin-bottom: 4rem;
    }

    .skill-category-section h2 {
        font-size: 1.8rem;
        font-weight: 600;
        color: var(--color-primary);
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--color-border);
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(5, minmax(0, 1fr));
        gap: 2rem;
        width: 100%;
    }

    @media (max-width: 1024px) {
        .skills-grid {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
    }

    @media (max-width: 768px) {
        .skills-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1rem;
        }
    }

    @media (max-width: 480px) {
        .skills-grid {
            grid-template-columns: minmax(0, 1fr);
        }
    }

    .skill-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        text-align: center;
        padding: 2rem 1.5rem;
        background: var(--color-bg-tertiary);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        transition: all var(--transition-base);
        min-height: 280px;
        height: 100%;
    }

    .skill-card:hover {
        border-color: var(--color-primary);
        box-shadow: 0 12px 32px rgba(59, 130, 246, 0.2);
        transform: translateY(-8px);
    }

    .skill-icon {
        width: 64px;
        height: 64px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .skill-icon :global(svg) {
        width: 100%;
        height: 100%;
    }

    .skill-card h3 {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-text-primary);
        margin: 0 0 1rem 0;
        min-height: 2.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .skill-meta {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1rem;
        width: 100%;
        flex-shrink: 0;
    }

    .skill-stars {
        color: var(--color-primary);
        font-size: 0.9rem;
        letter-spacing: 2px;
    }

    .skill-experience {
        font-size: 0.85rem;
        color: var(--color-text-secondary);
        font-weight: 500;
    }

    .skill-description {
        font-size: 0.85rem;
        color: var(--color-text-secondary);
        margin: 0;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .page-header h1 {
            font-size: 2rem;
        }

        .skill-category-section h2 {
            font-size: 1.4rem;
        }

        .skill-card {
            padding: 1.5rem 1rem;
        }
    }
</style>
