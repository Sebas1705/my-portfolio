---
import Layout from '@/presentation/layouts/Layout.astro';
import Header from '@/presentation/components/sections/Header.astro';
import Footer from '@/presentation/components/sections/Footer.astro';

import type { Language, Translations } from '@/domain';
import { supportedLanguages, translate } from '@/domain';
import { formatMonthYear } from '@/core';

import { InMemoryProjectRepository } from '@/data';
import { GetAllProjectsUseCase } from '@/domain';

export async function getStaticPaths() {
    const projects = await new GetAllProjectsUseCase(new InMemoryProjectRepository()).execute();
    const paths = [];
    for (const l of supportedLanguages) {
        for (const project of projects) {
            paths.push({ params: { lang: l, id: project.id } });
        }
    }
    return paths;
}
const lang: Language = Astro.params.lang as Language;
const { id } = Astro.params as { id: string };

import { InMemoryPersonalInfoRepository, InMemoryCommonLabelsRepository, InMemoryProjectLabelsRepository } from '@/data';
import { GetPersonalInfoUseCase, GetCommonLabelsUseCase, GetProjectLabelsUseCase } from '@/domain';

const personalInfo = await new GetPersonalInfoUseCase(new InMemoryPersonalInfoRepository()).execute();
const projects = await new GetAllProjectsUseCase(new InMemoryProjectRepository()).execute();
const project = projects.find((p: any) => p.id === id);
if (!project) return Astro.redirect(`/${lang}/`);

const commonLabels = await new GetCommonLabelsUseCase(new InMemoryCommonLabelsRepository()).execute();
const projectLabels = await new GetProjectLabelsUseCase(new InMemoryProjectLabelsRepository()).execute();

const typeLabels: Record<string, Translations> = {
    personal: projectLabels.personalProjects,
    work: projectLabels.workProjects,
    academic: projectLabels.academicProjects,
};
---

<Layout lang={lang} title={`${translate(project.title, lang)} - ${personalInfo.name}`} description={`${translate(project.description, lang)}`}>
    <Header lang={lang} personalInfo={personalInfo} />
    
    <main class="min-h-screen py-16 bg-gradient-to-br from-[var(--color-bg-primary)] to-[var(--color-bg-secondary)]">
        <div class="max-w-6xl mx-auto px-4">
            <div class="mb-6">
                <a href={`/${lang}/#projects`} class="text-[var(--color-primary)] hover:underline">‚Üê {translate(commonLabels.back, lang)}</a>
                <div class="flex items-center gap-4 mt-3">
                    <span class="px-3 py-1 rounded-md text-sm font-semibold uppercase tracking-wide bg-[var(--color-bg-secondary)] text-[var(--color-text-primary)]" data-type={project.type}>{translate(typeLabels[project.type], lang)}</span>
                    <span class="text-[var(--color-text-secondary)] text-sm">{formatMonthYear(project.startDate, lang)}</span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
                {project.imageUrl && (
                    <div class="bg-[var(--color-bg-tertiary)] rounded-lg overflow-hidden border border-[var(--color-border)]">
                        <img src={project.imageUrl} alt={translate(project.title, lang)} loading="lazy" class="w-full h-full object-cover" />
                    </div>
                )}

                <article class="bg-[var(--color-bg-tertiary)] border border-[var(--color-border)] rounded-lg p-8">
                    <h1 class="text-3xl md:text-4xl font-bold mb-4 text-[var(--color-text-primary)]">{translate(project.title, lang)}</h1>
                    <p class="text-[var(--color-text-secondary)] text-base leading-relaxed mb-6">{translate(project.description, lang)}</p>

                    {project.technologies && project.technologies.length > 0 && (
                        <section class="mb-6">
                            <h2 class="text-xl font-semibold text-[var(--color-primary)] mb-3">{translate(projectLabels.technologies, lang)}</h2>
                            <div class="flex flex-wrap gap-3">
                                {project.technologies.map((tech) => (
                                    <span class="bg-gradient-to-r from-[var(--color-primary-light)] to-[var(--color-primary-lighter)] text-[var(--color-text-primary)] px-3 py-1 rounded-full text-sm font-medium">{tech}</span>
                                ))}
                            </div>
                        </section>
                    )}

                    <div class="flex flex-col sm:flex-row gap-4 mt-6 pt-6 border-t border-[var(--color-border)]">
                        {project.demoUrl && (
                            <a href={project.demoUrl} target="_blank" rel="noopener noreferrer" class="btn-primary inline-flex items-center px-4 py-3 rounded-md font-semibold no-underline transition-transform hover:-translate-y-0.5">
                                {translate(projectLabels.viewDemo, lang)}
                            </a>
                        )}
                        {project.repoUrl && (
                            <a href={project.repoUrl} target="_blank" rel="noopener noreferrer" class="btn-outline inline-flex items-center px-4 py-3 rounded-md font-semibold no-underline hover:border-[var(--color-primary)] hover:text-[var(--color-primary)]">
                                {translate(projectLabels.viewCode, lang)}
                            </a>
                        )}
                    </div>
                </article>
            </div>
        </div>
    </main>

    <Footer lang={lang} />
</Layout>
