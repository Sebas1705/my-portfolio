---
import type { Language } from '@/domain';
import { translate } from '@/domain';
import Section  from '../common/Section.astro';

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

import { InMemoryProjectRepository, InMemoryProjectLabelsRepository } from '@/data';
import { GetProjectsByTypeUseCase, GetProjectLabelsUseCase } from '@/domain';

const projectLabels = await new GetProjectLabelsUseCase(new InMemoryProjectLabelsRepository()).execute();
const projects = await new GetProjectsByTypeUseCase(new InMemoryProjectRepository()).execute('personal');
---

<Section id="projects" class="bg-white dark:bg-slate-900" title={translate(projectLabels.title, lang)} subtitle={translate(projectLabels.subtitle, lang)}>
    <div class="w-full grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {projects.map((project, index) => {
        return (
            <article class="group bg-white dark:bg-slate-800 rounded-2xl overflow-hidden shadow-md transition-transform duration-200 hover:-translate-y-2 hover:shadow-xl flex flex-col" data-index={index}>
                {project.imageUrl && (
                    <div class="relative w-full h-48 md:h-56 lg:h-44 overflow-hidden bg-gray-100 dark:bg-slate-700">
                        <img src={project.imageUrl} alt={translate(project.title, lang)} loading="lazy" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                        <div class="absolute inset-0 bg-black/70 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                            <div class="flex gap-3">
                                {project.demoUrl && (
                                    <a
                                        href={project.demoUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="btn-primary inline-flex items-center gap-2 px-4 py-2 rounded-md font-semibold text-sm transform hover:scale-105"
                                        aria-label={translate(projectLabels.viewDemo, lang)}
                                    >
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="stroke-current">
                                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                            <polyline points="15 3 21 3 21 9"/>
                                            <line x1="10" y1="14" x2="21" y2="3"/>
                                        </svg>
                                        <span>{translate(projectLabels.viewDemo, lang)}</span>
                                    </a>
                                )}
                                {project.repoUrl && (
                                    <a
                                        href={project.repoUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="btn-primary inline-flex items-center gap-2 px-4 py-2 rounded-md font-semibold text-sm transform hover:scale-105"
                                        aria-label={translate(projectLabels.viewCode, lang)}
                                    >
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="fill-current">
                                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                        </svg>
                                        <span>{translate(projectLabels.viewCode, lang)}</span>
                                    </a>
                                )}
                            </div>
                        </div>
                    </div>
                )}

                <div class="p-6 flex-1 flex flex-col">
                    <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-3">{translate(project.title, lang)}</h3>
                    <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-4 flex-1">{translate(project.description, lang)}</p>

                    <div class="mt-4">
                        <span class="block text-sm font-semibold text-slate-900 dark:text-slate-100 mb-2">{translate(projectLabels.technologies, lang)}:</span>
                        <div class="flex flex-wrap gap-2">
                            {project.technologies.map(tech => (
                                <span class="badge-primary px-3 py-1 rounded-sm text-sm font-medium">{tech}</span>
                            ))}
                        </div>
                    </div>
                </div>
            </article>
        );
    })}
    </div>
</Section>
