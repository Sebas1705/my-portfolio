---
import type { Language, PersonalInfo } from '@/domain';
import { translate } from '@/domain';
import ThemeToggle from '../adaptability/ThemeToggle.astro';
import LanguageSelector from '../adaptability/LanguageSelector.astro';

interface Props {
    lang: Language;
    personalInfo: PersonalInfo;
}

import { InMemoryNavigationLabelsRepository } from '@/data';
import { GetNavigationLabelsUseCase } from '@/domain';

const navigationLabels = await new GetNavigationLabelsUseCase(new InMemoryNavigationLabelsRepository()).execute();

const { lang, personalInfo } = Astro.props;
---

<header class="fixed top-0 w-full min-w-125 z-50 bg-bg-surface-alt-v border-b-3 border-primary-dark-v">
    <nav class="flex items-center justify-evenly py-4 gap-6">
        <div class="flex items-center gap-4">
            <img
                src={personalInfo.profileImage}
                alt={personalInfo.name}
                class="size-15 aspect-square object-cover rounded-md border-3 border-primary-v shadow-md"
            />
            <span class="max-w-2xl text-primary-v font-bold text-xl">
                <span class="inline sm:hidden">Sebastián</span>
                <span class="hidden sm:inline xl:hidden">Sebastián Entrerrios García</span>
                <span class="hidden xl:inline">Sebastián Ramiro Entrerrios García</span>
            </span>
        </div>

        <button
            id="mobile-menu-toggle"
            aria-label="Toggle menu"
            class="inline-flex items-center justify-center 
            text-primary-dark-v rounded-md p-2 hover:bg-primary-dark-v
            hover:text-white transition lg:hidden"
        >
            <svg class="hamburger size-10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="3" y1="12" x2="21" y2="12"/>
                <line x1="3" y1="6" x2="21" y2="6"/>
                <line x1="3" y1="18" x2="21" y2="18"/>
            </svg>
            <svg class="close hidden size-10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"/>
                <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
        </button>

        <ul id="nav-links" class="hidden lg:flex gap-4 items-center">
            <li>
                <a href="/#home" class="nav-link">{translate(navigationLabels.home, lang)}</a>
            </li>
            <li>
                <a href="/#about" class="nav-link">{translate(navigationLabels.about, lang)}</a>
            </li>
            <li>
                <a href="/#work" class="nav-link">{translate(navigationLabels.work, lang)}</a>
            </li>
            <li>
                <a href="/#education" class="nav-link">{translate(navigationLabels.education, lang)}</a>
            </li>
            <li>
                <a href="/#projects" class="nav-link">{translate(navigationLabels.projects, lang)}</a>
            </li>
            <li>
                <a href="/#contact" class="nav-link">{translate(navigationLabels.contact, lang)}</a>
            </li>
        </ul>

        <div class="flex items-center gap-10">
            <ThemeToggle lang={lang} />
            <LanguageSelector currentLang={lang} />
        </div>
    </nav>
</header>

<style>
    @keyframes slideDown {
        from { opacity: 0; transform: translateY(-20px); }
        to   { opacity: 1; transform: translateY(0); }
    }
    .animate-slideDown { animation: slideDown 0.6s cubic-bezier(0.34, 1.56, 0.64, 1); }
</style>

<script>
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const navLinks = document.getElementById('nav-links');

    if (mobileMenuToggle && navLinks) {
        mobileMenuToggle.addEventListener('click', () => {
            mobileMenuToggle.classList.toggle('active');
            const isActive = mobileMenuToggle.classList.contains('active');

            if (isActive) {
                navLinks.classList.remove('hidden');
                navLinks.classList.add('flex', 'flex-col', 'absolute', 'inset-x-0', 'top-full', 'bg-bg-surface-alt-v', 'border-b-3', 'border-primary-dark-v', 'p-4', 'shadow-lg');
            } else {
                navLinks.classList.add('hidden');
                navLinks.classList.remove('flex', 'flex-col', 'absolute', 'inset-x-0', 'top-full', 'bg-bg-surface-alt-v', 'border-b-3', 'border-primary-dark-v', 'p-4', 'shadow-lg');
            }

            const hamburger = mobileMenuToggle.querySelector('.hamburger');
            const close = mobileMenuToggle.querySelector('.close');
            if (hamburger) hamburger.classList.toggle('hidden');
            if (close) close.classList.toggle('hidden');
        });

        // Close menu when clicking a link
        const links = navLinks.querySelectorAll('a');
        links.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenuToggle.classList.remove('active');
                navLinks.classList.add('hidden');
                const hamburger = mobileMenuToggle.querySelector('.hamburger');
                const close = mobileMenuToggle.querySelector('.close');
                if (hamburger) hamburger.classList.remove('hidden');
                if (close) close.classList.add('hidden');
            });
        });
    }

    // Add active state to current section
    const sections = document.querySelectorAll('section[id]');
    const navLinksElements = document.querySelectorAll('#nav-links a');

    window.addEventListener('scroll', () => {
        let current = '';
        sections.forEach(section => {
            const sectionTop = (section as HTMLElement).offsetTop;
            if (scrollY >= sectionTop - 100) {
                current = section.getAttribute('id') || '';
            }
        });

        navLinksElements.forEach(link => {
            link.classList.remove('text-primary', 'font-semibold');
            const href = link.getAttribute('href') || '';
            if (href === `/#${current}` || href === `#${current}`) {
                link.classList.add('text-primary', 'font-semibold');
            }
        });
    });
</script>
