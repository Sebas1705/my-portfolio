---
interface Props {
    text: string;
    variant?: 'default' | 'more';
    iconUrl?: string;
}

const { text, variant = 'default', iconUrl } = Astro.props;
---

<span class={`inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium transition ${variant === 'more' ? 'bg-blue-500 text-white border border-blue-500' : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 border border-gray-200 dark:border-slate-700'}`}>
    {iconUrl && (
        <img src={iconUrl} alt={text} width="16" height="16" loading="lazy" class="w-4 h-4 object-contain" />
    )}
    {text}
</span>

