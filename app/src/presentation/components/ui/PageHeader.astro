---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="w-full max-w-7xl mx-auto px-6 my-8 text-center">
    <h1 class="text-3xl xs:text-5xl font-extrabold text-primary-v">{title}</h1>
    {subtitle && <p class="mt-3 text-2xl text-secondary-v">{subtitle}</p>}
</div>
