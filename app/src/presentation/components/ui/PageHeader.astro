---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-8">
    <h1 class="text-3xl md:text-4xl font-extrabold text-slate-900 dark:text-slate-100">{title}</h1>
    {subtitle && <p class="mt-3 text-lg text-slate-600 dark:text-slate-300">{subtitle}</p>}
</div>
