---
interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;
---

<a href={href} class="inline-flex items-center gap-2 text-md font-medium w-30
text-white bg-primary-v py-2 px-5 hover:bg-secondary-v rounded-full transition-colors">
    <span aria-hidden="true" class="text-lg">‚Üê</span>
    <span>{text}</span>
</a>
