---
import type { Language } from '@domain/entities/Language';
import type { PersonalInfo } from '@domain/entities/PersonalInfo';
import { translate } from '@infrastructure/i18n';

interface Props {
  lang: Language;
  personalInfo: PersonalInfo;
}

const { lang, personalInfo } = Astro.props;

const highlights = [
  translate(lang, 'hero.highlights.fast'),
  translate(lang, 'hero.highlights.api'),
  translate(lang, 'hero.highlights.delivery')
];

const pillars = [
  translate(lang, 'hero.pillars.web'),
  translate(lang, 'hero.pillars.mobile'),
  translate(lang, 'hero.pillars.api')
];

const stackFocus = ['TypeScript', 'React / Next', 'Node.js / Nest', 'React Native', 'CI/CD'];
---

<section id="home" class="hero section">
  <div class="hero-bg hero-bg-1"></div>
  <div class="hero-bg hero-bg-2"></div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <div class="eyebrow fade-in">
          <span class="chip chip-strong">{translate(lang, 'hero.badge')}</span>
          <span class="chip chip-ghost">{translate(lang, 'hero.availability')}</span>
        </div>

        <p class="hero-greeting fade-in">{translate(lang, 'hero.greeting')}</p>
        <h1 class="hero-title fade-in">{personalInfo.name}</h1>
        <h2 class="hero-subtitle fade-in">{personalInfo.title}</h2>
        <p class="hero-description fade-in">{translate(lang, 'hero.description')}</p>

        <div class="hero-highlights fade-in">
          {highlights.map((item) => (
            <div class="highlight">
              <span class="highlight-dot" aria-hidden="true"></span>
              <span>{item}</span>
            </div>
          ))}
        </div>

        <div class="hero-actions fade-in">
          <div class="cta-buttons">
            <a href="#projects" class="btn btn-primary">
              {translate(lang, 'hero.cta')}
            </a>
            <a href="#contact" class="btn btn-secondary">
              {translate(lang, 'hero.ctaSecondary')}
            </a>
          </div>

          <div class="stack">
            <p class="stack-label">{translate(lang, 'hero.stackLabel')}</p>
            <div class="stack-tags">
              {stackFocus.map((item) => (
                <span class="stack-tag">{item}</span>
              ))}
            </div>
          </div>
        </div>

        <div class="social-links fade-in">
          {personalInfo.socialLinks.github && (
            <a href={personalInfo.socialLinks.github} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          )}
          {personalInfo.socialLinks.linkedin && (
            <a href={personalInfo.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
          {personalInfo.socialLinks.twitter && (
            <a href={personalInfo.socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Twitter">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
          )}
        </div>
      </div>

      <div class="hero-image">
        <div class="image-wrapper">
          <div class="image-frame">
            <img 
              src={personalInfo.profileImage} 
              alt={personalInfo.name}
              class="profile-pic"
            />
          </div>
          <div class="image-orbit"></div>
          <div class="image-badge" aria-label="Perfil Full Stack y Mobile">
            {translate(lang, 'hero.badge')}
          </div>

          <div class="pillar-card">
            {pillars.map((item) => (
              <div class="pillar-row">
                <span class="pillar-dot" aria-hidden="true"></span>
                <span>{item}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    min-height: calc(100vh - 2rem);
    display: flex;
    align-items: center;
    padding: 5rem 0;
  }

  .hero-bg {
    position: absolute;
    filter: blur(90px);
    opacity: 0.65;
    pointer-events: none;
    z-index: 0;
  }

  .hero-bg-1 {
    width: 420px;
    height: 420px;
    background: radial-gradient(circle at 30% 30%, rgba(59, 130, 246, 0.35), transparent 55%);
    top: -80px;
    left: -80px;
  }

  .hero-bg-2 {
    width: 520px;
    height: 520px;
    background: radial-gradient(circle at 70% 60%, rgba(16, 185, 129, 0.28), transparent 55%);
    bottom: -120px;
    right: -120px;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3xl);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-content {
      grid-template-columns: 1.05fr 0.95fr;
      gap: var(--spacing-4xl);
    }
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .eyebrow {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .chip {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 0.9rem;
    border-radius: var(--radius-full);
    font-weight: 700;
    font-size: 0.95rem;
    letter-spacing: 0.01em;
    border: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(255, 255, 255, 0.06);
    color: var(--color-text-primary);
  }

  .chip-strong {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: #fff;
    border: none;
    box-shadow: var(--shadow-lg);
  }

  .chip-ghost {
    border: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.04);
  }

  .hero-greeting {
    font-size: 1.1rem;
    color: var(--color-primary);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .hero-title {
    margin: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: clamp(2.75rem, 4vw, 3.5rem);
    line-height: 1.05;
  }

  .hero-subtitle {
    color: var(--color-text-secondary);
    font-weight: 700;
    margin: 0;
    font-size: 1.35rem;
  }

  .hero-description {
    font-size: 1.15rem;
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 680px;
  }

  .hero-highlights {
    display: grid;
    gap: var(--spacing-sm);
    padding: 1rem;
    border-radius: var(--radius-xl);
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-md);
  }

  .highlight {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.75rem;
    align-items: center;
    color: var(--color-text-primary);
  }

  .highlight-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    box-shadow: 0 0 0 6px rgba(59, 130, 246, 0.14);
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.95rem 1.85rem;
    border-radius: var(--radius-lg);
    font-weight: 700;
    font-size: 1rem;
    transition: all var(--transition-fast);
    text-decoration: none;
    border: 1px solid transparent;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: #fff;
    box-shadow: var(--shadow-lg);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background-color: var(--color-primary);
    color: #fff;
    transform: translateY(-2px);
  }

  .stack {
    display: grid;
    gap: var(--spacing-sm);
    padding: 1rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.03);
  }

  .stack-label {
    margin: 0;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .stack-tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .stack-tag {
    padding: 0.45rem 0.9rem;
    border-radius: var(--radius-full);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    font-weight: 600;
    color: var(--color-text-secondary);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    border-radius: var(--radius-full);
    background-color: var(--color-bg-secondary);
    color: var(--color-text-primary);
    transition: all var(--transition-fast);
    border: 1px solid var(--color-border);
  }

  .social-link:hover {
    background-color: var(--color-primary);
    color: #fff;
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .image-wrapper {
    position: relative;
    width: min(420px, 90vw);
    aspect-ratio: 1 / 1;
    animation: float 3s ease-in-out infinite, slideDown 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .image-frame {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 2rem;
    padding: 12px;
    background: conic-gradient(from 140deg, var(--color-primary), var(--color-secondary), var(--color-primary));
    display: grid;
    place-items: center;
    box-shadow: var(--shadow-xl);
    z-index: 2;
  }

  .profile-pic {
    width: 100%;
    height: 100%;
    border-radius: 1.75rem;
    object-fit: cover;
    background: var(--color-bg-primary);
    box-shadow: inset 0 0 0 3px rgba(255, 255, 255, 0.35);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .image-orbit {
    position: absolute;
    inset: 6%;
    border-radius: 50%;
    border: 2px dashed rgba(59, 130, 246, 0.45);
    animation: pulse 6s ease-in-out infinite;
    z-index: 1;
  }

  .image-badge {
    position: absolute;
    bottom: -10px;
    right: 10px;
    background: linear-gradient(135deg, var(--color-primary-dark), var(--color-secondary));
    color: #fff;
    padding: 0.55rem 1.1rem;
    border-radius: var(--radius-full);
    font-weight: 800;
    font-size: 0.95rem;
    letter-spacing: 0.01em;
    box-shadow: var(--shadow-lg);
    z-index: 3;
    white-space: nowrap;
  }

  .pillar-card {
    position: absolute;
    left: -10px;
    top: 18px;
    display: grid;
    gap: 0.55rem;
    padding: 0.9rem 1rem;
    background: rgba(15, 23, 42, 0.75);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    z-index: 3;
    backdrop-filter: blur(6px);
  }

  .pillar-row {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.65rem;
    align-items: center;
    color: #fff;
    font-weight: 700;
  }

  .pillar-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-secondary);
    box-shadow: 0 0 0 6px rgba(16, 185, 129, 0.25);
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-18px);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.6;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.9;
    }
  }

  .fade-in {
    animation: fadeIn 600ms ease forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(6px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
