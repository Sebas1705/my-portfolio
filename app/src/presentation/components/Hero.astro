---
import type { Language } from '@domain/entities/Language';
import type { PersonalInfo } from '@domain/entities/PersonalInfo';
import { translate } from '@infrastructure/i18n';

interface Props {
  lang: Language;
  personalInfo: PersonalInfo;
}

const { lang, personalInfo } = Astro.props;
---

<section id="home" class="hero section">
  <div class="hero-bg hero-bg-1"></div>
  <div class="hero-bg hero-bg-2"></div>

  <div class="container">
    <div class="hero-content">
      <div class="profile-card fade-in" style={`background-image: url(${personalInfo.profileImage})`}>
        <div class="profile-overlay">
          <span class="hero-badge" data-i18n-key="hero.greeting">{translate(lang, 'hero.greeting')}</span>
          <h1 class="hero-title">
            <span class="name-short">Sebas</span>
            <span class="name-medium">Sebastián</span>
            <span class="name-long">Sebastián Entrerrios García</span>
            <span class="name-full">Sebastián Ramiro Entrerrios García</span>
          </h1>
          <p class="hero-subtitle">{personalInfo.title}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    min-height: calc(100vh - 2rem);
    display: flex;
    align-items: center;
    padding: 8rem 0 5rem 0;
  }

  .hero-bg {
    position: absolute;
    filter: blur(90px);
    opacity: 0.65;
    pointer-events: none;
    z-index: 0;
  }

  .hero-bg-1 {
    width: 420px;
    height: 420px;
    background: radial-gradient(circle at 30% 30%, rgba(59, 130, 246, 0.35), transparent 55%);
    top: -80px;
    left: -80px;
  }

  .hero-bg-2 {
    width: 520px;
    height: 520px;
    background: radial-gradient(circle at 70% 60%, rgba(16, 185, 129, 0.28), transparent 55%);
    bottom: -120px;
    right: -120px;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-lg);
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .profile-card {
    width: 100%;
    min-height: 350px;
    border-radius: var(--radius-xl);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    box-shadow: var(--shadow-xl);
    border: 2px solid var(--color-primary);
    overflow: hidden;
    position: relative;
  }

  @media (min-width: 768px) {
    .profile-card {
      min-height: 450px;
    }
  }

  @media (min-width: 1024px) {
    .profile-card {
      min-height: 500px;
    }
  }

  .profile-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.75) 70%, transparent 100%);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: var(--spacing-sm);
    text-align: center;
  }

  @media (min-width: 768px) {
    .profile-overlay {
      top: 0;
      right: 0;
      bottom: 0;
      left: auto;
      width: 50%;
      background: linear-gradient(to left, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.75) 70%, transparent 100%);
      padding: 2.5rem;
      justify-content: center;
      gap: var(--spacing-md);
      text-align: right;
    }
  }

  .hero-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: #ffffff;
    font-weight: 700;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: var(--radius-full);
    box-shadow: var(--shadow-lg);
    align-self: center;
  }

  @media (min-width: 768px) {
    .hero-badge {
      align-self: flex-end;
      font-size: 0.9rem;
    }
  }

  .hero-title {
    margin: 0;
    color: #ffffff;
    font-weight: 900;
    font-size: clamp(2rem, 6vw, 3rem);
    line-height: 1.1;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  /* Ocultar todos los nombres por defecto */
  .hero-title .name-short,
  .hero-title .name-medium,
  .hero-title .name-long,
  .hero-title .name-full {
    display: none;
  }

  /* Mobile: Mostrar solo "Sebas" */
  .hero-title .name-short {
    display: inline;
  }

  /* Tablet pequeño: Mostrar "Sebastián" */
  @media (min-width: 480px) {
    .hero-title .name-short {
      display: none;
    }
    .hero-title .name-medium {
      display: inline;
    }
  }

  /* Tablet grande: Mostrar "Sebastián Entrerrios García" */
  @media (min-width: 768px) {
    .hero-title .name-medium {
      display: none;
    }
    .hero-title .name-long {
      display: inline;
    }
  }

  /* Desktop: Mostrar "Sebastián Ramiro Entrerrios García" */
  @media (min-width: 1024px) {
    .hero-title .name-long {
      display: none;
    }
    .hero-title .name-full {
      display: inline;
    }
  }

  .hero-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    margin: 0;
    font-size: clamp(1rem, 3vw, 1.25rem);
    text-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
  }

  .fade-in {
    animation: fadeIn 600ms ease forwards;
    opacity: 0;
  }

  .fade-in:nth-child(1) {
    animation-delay: 0ms;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(6px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
