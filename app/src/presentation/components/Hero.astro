---
import type { Language, PersonalInfo } from '@/domain';
import { translate as domainTranslate } from '@/domain';
import Section from './common/Section.astro';
import Button from './common/ui/Button.astro';
import SocialLink from './common/ui/SocialLink.astro';
import GithubIcon from './icons/GithubIcon.astro';
import LinkedinIcon from './icons/LinkedinIcon.astro';
import EmailIcon from './icons/EmailIcon.astro';
import LanguageSelector from './LanguageSelector.astro';
import ThemeToggle from './ThemeToggle.astro';
import TechBadge from './ui/TechBadge.astro';

interface Props {
    lang: Language;
    personalInfo: PersonalInfo;
    labels?: Record<string, any>;
}

const { lang, personalInfo, labels } = Astro.props;
---

<Section id="home" class="hero section">
    <div class="hero-bg hero-bg-1"></div>
    <div class="hero-bg hero-bg-2"></div>

    <div class="container">
        <div class="hero-controls">
            <div class="controls-left">
                <LanguageSelector currentLang={lang} />
            </div>
            <div class="controls-right">
                <ThemeToggle />
            </div>
        </div>

        <div class="hero-content">
            <div class="profile-card fade-in" style={`background-image: url(${personalInfo.profileImage})`}>
                <div class="profile-overlay">
                    <span class="hero-badge">{labels && labels.heroGreeting ? domainTranslate(labels.heroGreeting, lang) : 'Hello,'}</span>
                    <h1 class="hero-title">
                        <span class="name-short">{personalInfo.name_short}</span>
                        <span class="name-medium">{personalInfo.name_medium}</span>
                        <span class="name-long">{personalInfo.name_long}</span>
                        <span class="name-full">{personalInfo.name}</span>
                    </h1>
                    <p class="hero-subtitle">{personalInfo.title?.[lang] ?? (labels && labels.heroTitle ? domainTranslate(labels.heroTitle, lang) : 'Frontend Developer')}</p>

                    <p class="hero-description">{personalInfo.bio?.[lang] ?? (labels && labels.heroDescription ? domainTranslate(labels.heroDescription, lang) : 'A passionate developer.')}</p>

                    <div class="hero-actions">
                        <Button href="/proyectos" variant="primary" size="md">{labels && labels.heroCta ? domainTranslate(labels.heroCta, lang) : 'See projects'}</Button>
                        <Button href="#contact" variant="secondary" size="md" class="ml-3">{labels && labels.heroCtaSecondary ? domainTranslate(labels.heroCtaSecondary, lang) : 'Contact me'}</Button>
                    </div>

                    <div class="hero-meta">
                        <div class="hero-stack">
                            <span class="stack-label">{labels && labels.heroStackLabel ? domainTranslate(labels.heroStackLabel, lang) : i18nTranslate(lang, 'hero.stackLabel')}</span>
                            <TechBadge text="TypeScript" />
                            <TechBadge text="Astro" />
                            <TechBadge text="React" variant="more" />
                        </div>

                        <div class="hero-social">
                            {personalInfo.socialLinks?.github && (
                                <SocialLink href={personalInfo.socialLinks.github} label="GitHub">
                                    <GithubIcon />
                                </SocialLink>
                            )}
                            {personalInfo.socialLinks?.linkedin && (
                                <SocialLink href={personalInfo.socialLinks.linkedin} label="LinkedIn">
                                    <LinkedinIcon />
                                </SocialLink>
                            )}
                            {personalInfo.email && (
                                <SocialLink href={`mailto:${personalInfo.email}`} label="Email">
                                    <EmailIcon />
                                </SocialLink>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Section>

<style>
    .hero {
        position: relative;
        overflow: hidden;
        min-height: calc(100vh - 2rem);
        display: flex;
        align-items: center;
        padding: 8rem 0 5rem 0;
    }

    .hero-bg {
        position: absolute;
        filter: blur(90px);
        opacity: 0.65;
        pointer-events: none;
        z-index: 0;
    }

    .hero-bg-1 {
        width: 420px;
        height: 420px;
        background: radial-gradient(circle at 30% 30%, rgba(59, 130, 246, 0.35), transparent 55%);
        top: -80px;
        left: -80px;
    }

    .hero-bg-2 {
        width: 520px;
        height: 520px;
        background: radial-gradient(circle at 70% 60%, rgba(16, 185, 129, 0.28), transparent 55%);
        bottom: -120px;
        right: -120px;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: var(--spacing-lg);
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .hero-controls {
        position: absolute;
        top: 1.25rem;
        right: 1.25rem;
        left: 1.25rem;
        display: flex;
        justify-content: space-between;
        z-index: 2;
        pointer-events: auto;
    }

    .controls-left,
    .controls-right {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .hero-description {
        color: rgba(255, 255, 255, 0.9);
        margin: 0.5rem 0 1rem 0;
        font-size: 1rem;
        max-width: 60ch;
        opacity: 0.95;
    }

    .hero-actions {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-top: 0.5rem;
    }

    .ml-3 {
        margin-left: 0.75rem;
    }

    .hero-meta {
        display: flex;
        gap: 1rem;
        justify-content: center;
        align-items: center;
        margin-top: 1rem;
        flex-wrap: wrap;
    }

    .hero-stack {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .stack-label {
        color: rgba(255,255,255,0.85);
        font-weight: 600;
        margin-right: 0.5rem;
        font-size: 0.9rem;
    }

    .hero-social {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }


    .profile-card {
        width: 100%;
        min-height: 350px;
        border-radius: var(--radius-xl);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        box-shadow: var(--shadow-xl);
        border: 2px solid var(--color-primary);
        overflow: hidden;
        position: relative;
    }

    @media (min-width: 768px) {
        .profile-card {
            min-height: 450px;
        }
    }

    @media (min-width: 1024px) {
        .profile-card {
            min-height: 500px;
        }
    }

    .profile-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.75) 70%, transparent 100%);
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        gap: var(--spacing-sm);
        text-align: center;
    }

    @media (min-width: 768px) {
        .profile-overlay {
            top: 0;
            right: 0;
            bottom: 0;
            left: auto;
            width: 50%;
            background: linear-gradient(to left, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.75) 70%, transparent 100%);
            padding: 2.5rem;
            justify-content: center;
            gap: var(--spacing-md);
            text-align: right;
        }
    }

    .hero-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        color: #ffffff;
        font-weight: 700;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        border-radius: var(--radius-full);
        box-shadow: var(--shadow-lg);
        align-self: center;
    }

    @media (min-width: 768px) {
        .hero-badge {
            align-self: flex-end;
            font-size: 0.9rem;
        }
    }

    .hero-title {
        margin: 0;
        color: #ffffff;
        font-weight: 900;
        font-size: clamp(2rem, 6vw, 3rem);
        line-height: 1.1;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    /* Ocultar todos los nombres por defecto */
    .hero-title .name-short,
    .hero-title .name-medium,
    .hero-title .name-long,
    .hero-title .name-full {
        display: none;
    }

    /* Mobile: Mostrar solo "Sebas" */
    .hero-title .name-short {
        display: inline;
    }

    /* Tablet pequeño: Mostrar "Sebastián" */
    @media (min-width: 480px) {
        .hero-title .name-short {
            display: none;
        }
        .hero-title .name-medium {
            display: inline;
        }
    }

    /* Tablet grande: Mostrar "Sebastián Entrerrios García" */
    @media (min-width: 768px) {
        .hero-title .name-medium {
            display: none;
        }
        .hero-title .name-long {
            display: inline;
        }
    }

    /* Desktop: Mostrar "Sebastián Ramiro Entrerrios García" */
    @media (min-width: 1024px) {
        .hero-title .name-long {
            display: none;
        }
        .hero-title .name-full {
            display: inline;
        }
    }

    .hero-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        margin: 0;
        font-size: clamp(1rem, 3vw, 1.25rem);
        text-shadow: 0 1px 5px rgba(0, 0, 0, 0.5);
    }

    .fade-in {
        animation: fadeIn 600ms ease forwards;
        opacity: 0;
    }

    .fade-in:nth-child(1) {
        animation-delay: 0ms;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(6px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
