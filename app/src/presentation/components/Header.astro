---
import type { Language, NavigationLabels, PersonalInfo } from '@/domain';
import { translate } from '@/domain';
import ThemeToggle from './ThemeToggle.astro';
import LanguageSelector from './LanguageSelector.astro';

interface Props {
    lang: Language;
    personalInfo: PersonalInfo;
    navigationLabels: NavigationLabels;
}

const { lang, personalInfo, navigationLabels } = Astro.props;
---

<header class="fixed inset-x-0 top-0 z-50 bg-white/90 dark:bg-slate-900/90 backdrop-blur border-b border-indigo-600">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <nav class="flex items-center justify-between py-4 gap-6">
            <div class="flex items-center gap-3 text-indigo-600 font-bold text-lg">
                <img
                    src={personalInfo.profileImage}
                    alt={personalInfo.name}
                    class="w-12 h-12 rounded-lg object-cover border-2 border-indigo-600 shadow-md animate-slideDown"
                    width="48"
                    height="48"
                />
                <span class="max-w-xs overflow-hidden">
                    <span class="hidden sm:inline md:hidden">Sebas</span>
                    <span class="hidden md:inline lg:hidden">Sebastián</span>
                    <span class="hidden lg:inline xl:hidden">Sebastián Entrerrios García</span>
                    <span class="hidden xl:inline">Sebastián Ramiro Entrerrios García</span>
                </span>
            </div>

            <button
                id="mobile-menu-toggle"
                aria-label="Toggle menu"
                class="inline-flex items-center justify-center text-indigo-600 bg-white dark:bg-slate-800 border-2 border-indigo-600 rounded-md p-2 hover:bg-indigo-600 hover:text-white transition lg:hidden"
            >
                <svg class="hamburger" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="12" x2="21" y2="12"/>
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <line x1="3" y1="18" x2="21" y2="18"/>
                </svg>
                <svg class="close hidden" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                </svg>
            </button>

            <ul id="nav-links" class="hidden lg:flex gap-6 items-center">
                <li>
                    <a href="/#home" data-nav-link class="text-slate-900 dark:text-slate-100 font-medium text-sm transition-colors whitespace-nowrap overflow-hidden truncate">{translate(navigationLabels.home, lang)}</a>
                </li>
                <li>
                    <a href="/#about" data-nav-link class="text-slate-900 dark:text-slate-100 font-medium text-sm transition-colors whitespace-nowrap overflow-hidden truncate">{translate(navigationLabels.about, lang)}</a>
                </li>
                <li>
                    <a href="/#work" data-nav-link class="text-slate-900 dark:text-slate-100 font-medium text-sm transition-colors whitespace-nowrap overflow-hidden truncate">{translate(navigationLabels.work, lang)}</a>
                </li>
                <li>
                    <a href="/#education" data-nav-link class="text-slate-900 dark:text-slate-100 font-medium text-sm transition-colors whitespace-nowrap overflow-hidden truncate">{translate(navigationLabels.education, lang)}</a>
                </li>
                <li>
                    <a href="/#projects" data-nav-link class="text-slate-900 dark:text-slate-100 font-medium text-sm transition-colors whitespace-nowrap overflow-hidden truncate">{translate(navigationLabels.projects, lang)}</a>
                </li>
                <li>
                    <a href="/#contact" data-nav-link class="text-slate-900 dark:text-slate-100 font-medium text-sm transition-colors whitespace-nowrap overflow-hidden truncate">{translate(navigationLabels.contact, lang)}</a>
                </li>
            </ul>

            <div class="flex items-center gap-4">
                <ThemeToggle lang={lang} />
                <LanguageSelector currentLang={lang} />
            </div>
        </nav>
    </div>
</header>

<style>
@keyframes slideDown {
  from { opacity: 0; transform: translateY(-20px); }
  to   { opacity: 1; transform: translateY(0); }
}
.animate-slideDown { animation: slideDown 0.6s cubic-bezier(0.34, 1.56, 0.64, 1); }
</style>

<script>
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const navLinks = document.getElementById('nav-links');

    if (mobileMenuToggle && navLinks) {
        mobileMenuToggle.addEventListener('click', () => {
            mobileMenuToggle.classList.toggle('active');
            const isActive = mobileMenuToggle.classList.contains('active');

            if (isActive) {
                navLinks.classList.remove('hidden');
                navLinks.classList.add('flex', 'flex-col', 'absolute', 'inset-x-0', 'top-full', 'bg-white', 'dark:bg-slate-900', 'border-b', 'border-gray-100', 'dark:border-slate-700', 'p-4', 'shadow-lg');
            } else {
                navLinks.classList.add('hidden');
                navLinks.classList.remove('flex', 'flex-col', 'absolute', 'inset-x-0', 'top-full', 'bg-white', 'dark:bg-slate-900', 'border-b', 'border-gray-100', 'dark:border-slate-700', 'p-4', 'shadow-lg');
            }

            const hamburger = mobileMenuToggle.querySelector('.hamburger');
            const close = mobileMenuToggle.querySelector('.close');
            if (hamburger) hamburger.classList.toggle('hidden');
            if (close) close.classList.toggle('hidden');
        });

        // Close menu when clicking a link
        const links = navLinks.querySelectorAll('a');
        links.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenuToggle.classList.remove('active');
                navLinks.classList.add('hidden');
                const hamburger = mobileMenuToggle.querySelector('.hamburger');
                const close = mobileMenuToggle.querySelector('.close');
                if (hamburger) hamburger.classList.remove('hidden');
                if (close) close.classList.add('hidden');
            });
        });
    }

    // Add active state to current section
    const sections = document.querySelectorAll('section[id]');
    const navLinksElements = document.querySelectorAll('#nav-links a');

    window.addEventListener('scroll', () => {
        let current = '';
        sections.forEach(section => {
            const htmlSection = section;
            const sectionTop = htmlSection.offsetTop;
            if (scrollY >= sectionTop - 100) {
                current = section.getAttribute('id') || '';
            }
        });

        navLinksElements.forEach(link => {
            link.classList.remove('text-indigo-600', 'font-semibold');
            const href = link.getAttribute('href') || '';
            if (href === `/#${current}` || href === `#${current}`) {
                link.classList.add('text-indigo-600', 'font-semibold');
            }
        });
    });
</script>
