---
import type { Language } from '@domain/entities/Language';
import { translate } from '@infrastructure/i18n';
import ThemeToggle from './ThemeToggle.astro';
import LanguageSelector from './LanguageSelector.astro';

interface Props {
  lang: Language;
  personalInfo: {
    name: string;
    profileImage: string;
  };
}

const { lang, personalInfo } = Astro.props;

const navItems = [
  { href: '#home', label: translate(lang, 'nav.home') },
  { href: '#about', label: translate(lang, 'nav.about') },
  { href: '#work', label: translate(lang, 'nav.work') },
  { href: '#education', label: translate(lang, 'nav.education') },
  { href: '#projects', label: translate(lang, 'nav.projects') },
  { href: '#contact', label: translate(lang, 'nav.contact') }
];
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <div class="nav-brand">
        <img 
          src={personalInfo.profileImage} 
          alt={personalInfo.name}
          class="profile-image"
          width="40"
          height="40"
        />
        <span class="brand-name">{personalInfo.name}</span>
      </div>

      <button 
        class="mobile-menu-toggle" 
        id="mobile-menu-toggle"
        aria-label="Toggle menu"
      >
        <svg class="hamburger" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="12" x2="21" y2="12"/>
          <line x1="3" y1="6" x2="21" y2="6"/>
          <line x1="3" y1="18" x2="21" y2="18"/>
        </svg>
        <svg class="close" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>

      <ul class="nav-links" id="nav-links">
        {navItems.map(item => (
          <li>
            <a href={item.href} class="nav-link">
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <div class="nav-actions">
        <ThemeToggle lang={lang} />
        <LanguageSelector currentLang={lang} />
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: rgba(255, 255, 255, 0.98);
    background-image: none;
    border-bottom: 2px solid var(--color-primary);
    backdrop-filter: blur(10px);
  }

  [data-theme="dark"] .header {
    background-color: rgba(15, 23, 42, 0.98);
    background-image: none;
    border-bottom: 2px solid var(--color-primary);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
    gap: var(--spacing-lg);
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-primary);
    text-decoration: none;
  }

  [data-theme="dark"] .nav-brand {
    color: var(--color-primary);
  }

  .profile-image {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-full);
    object-fit: cover;
    border: 2px solid var(--color-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  [data-theme="dark"] .profile-image {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }

  .brand-name {
    display: none;
  }

  @media (min-width: 640px) {
    .brand-name {
      display: inline;
    }
  }

  .nav-links {
    display: none;
    list-style: none;
    gap: var(--spacing-lg);
    margin: 0;
    padding: 0;
  }

  @media (min-width: 1024px) {
    .nav-links {
      display: flex;
    }
  }

  .nav-link {
    color: var(--color-text-primary);
    font-weight: 500;
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  .nav-link.active {
    color: var(--color-primary);
    font-weight: 600;
  }

  [data-theme="dark"] .nav-link {
    color: #f1f5f9;
  }

  [data-theme="dark"] .nav-link:hover {
    color: var(--color-primary);
  }

  [data-theme="dark"] .nav-link.active {
    color: var(--color-primary);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 0;
    height: 3px;
    background-color: var(--color-primary);
    transition: width var(--transition-fast);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .mobile-menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    background-color: var(--color-bg-secondary);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-md);
    cursor: pointer;
    padding: 0.5rem;
    transition: all var(--transition-fast);
    font-weight: 600;
  }

  .mobile-menu-toggle:hover {
    background-color: var(--color-primary);
    color: var(--color-bg-primary);
  }

  [data-theme="dark"] .mobile-menu-toggle {
    background-color: var(--color-bg-secondary);
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  [data-theme="dark"] .mobile-menu-toggle:hover {
    background-color: var(--color-primary);
    color: var(--color-bg-primary);
  }

  @media (min-width: 1024px) {
    .mobile-menu-toggle {
      display: none;
    }
  }

  .mobile-menu-toggle .close {
    display: none;
  }

  .mobile-menu-toggle.active .hamburger {
    display: none;
  }

  .mobile-menu-toggle.active .close {
    display: block;
  }

  /* Mobile menu */
  @media (max-width: 1023px) {
    .nav-links.active {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background-color: var(--color-bg-primary);
      border-bottom: 1px solid var(--color-border);
      padding: var(--spacing-lg);
      box-shadow: var(--shadow-lg);
    }

    .nav-link::after {
      display: none;
    }
  }
</style>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const navLinks = document.getElementById('nav-links');

  if (mobileMenuToggle && navLinks) {
    mobileMenuToggle.addEventListener('click', () => {
      mobileMenuToggle.classList.toggle('active');
      navLinks.classList.toggle('active');
    });

    // Close menu when clicking a link
    const links = navLinks.querySelectorAll('a');
    links.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenuToggle.classList.remove('active');
        navLinks.classList.remove('active');
      });
    });
  }

  // Add active state to current section
  const sections = document.querySelectorAll('section[id]');
  const navLinksElements = document.querySelectorAll('.nav-link');

  window.addEventListener('scroll', () => {
    let current = '';
    sections.forEach(section => {
      const htmlSection = section as HTMLElement;
      const sectionTop = htmlSection.offsetTop;
      if (scrollY >= sectionTop - 100) {
        current = section.getAttribute('id') || '';
      }
    });

    navLinksElements.forEach(link => {
      link.classList.remove('active');
      if (link.getAttribute('href') === `#${current}`) {
        link.classList.add('active');
      }
    });
  });
</script>
