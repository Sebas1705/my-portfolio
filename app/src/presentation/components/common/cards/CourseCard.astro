---
import type { Course, Language, CourseLabels } from '@/domain';
import { translate } from '@/domain';
import { formatMonthYear } from '@/core';

interface Props {
    course: Course;
    lang: Language;
    courseLabels: CourseLabels;
}

const { course, lang, courseLabels } = Astro.props;
---
<article class="bg-bg-surface-alt-v rounded-xl p-6 shadow-md border border-primary-v flex flex-col gap-4 transition-transform duration-200 hover:-translate-y-1.5 hover:shadow-xl">
    <div class="flex justify-between items-center text-lg text-secondary-v mb-1">
        <p>{formatMonthYear(course.completionDate, lang)}</p>
        <p>{translate(course.institution, lang)}</p>
    </div>
    <h3 class="text-2xl font-bold text-primary-v mb-1">{translate(course.title, lang)}</h3>
    <p class="text-bg-inverse-alt-v mb-4">{translate(course.description, lang)}</p>
    <div class="mt-auto flex gap-4">
        {course.certificateUrl && (
            <a
                href={course.certificateUrl}
                class="text-accent-v font-semibold hover:text-secondary-v"
                target="_blank"
                rel="noopener noreferrer"
            >
                {translate(courseLabels.certificate, lang)}
            </a>
        )}
        {course.url && (
            <a
                href={course.url}
                class="text-accent-v font-semibold hover:text-secondary-v"
                target="_blank"
                rel="noopener noreferrer"
            >
                {translate(courseLabels.viewCourse, lang)}
            </a>
        )}
    </div>
</article>

