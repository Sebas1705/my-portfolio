---
import type { Course, Language, CourseLabels } from '@/domain';
import { translate } from '@/domain';
import { formatMonthYear } from '@/core';

interface Props {
    course: Course;
    lang: Language;
    courseLabels: CourseLabels;
}

const { course, lang, courseLabels } = Astro.props;
---
<article class="bg-white/80 dark:bg-slate-900/70 rounded-xl p-6 shadow-md border border-gray-200 dark:border-slate-700 flex flex-col gap-4 transition-transform duration-200 hover:-translate-y-1.5 hover:shadow-xl">
    <div class="flex justify-between items-center text-sm text-slate-500 mb-1">
        <p class="text-sm text-slate-500">{formatMonthYear(course.completionDate, lang)}</p>
        <p class="text-sm text-slate-500">{translate(course.institution, lang)}</p>
    </div>
    <h3 class="text-lg font-bold text-sky-600 mb-1">{translate(course.title, lang)}</h3>
    <p class="text-slate-600 dark:text-slate-300 mb-4">{translate(course.description, lang)}</p>
    <div class="mt-auto flex gap-4">
        {course.certificateUrl && (
            <a
                href={course.certificateUrl}
                class="text-sky-600 font-semibold underline hover:text-sky-700"
                target="_blank"
                rel="noopener noreferrer"
            >
                {translate(courseLabels.certificate, lang)}
            </a>
        )}
        {course.url && (
            <a
                href={course.url}
                class="text-sky-600 font-semibold underline hover:text-sky-700"
                target="_blank"
                rel="noopener noreferrer"
            >
                {translate(courseLabels.viewCourse, lang)}
            </a>
        )}
    </div>
</article>

