---
interface Props {
    title: string;
    value: string;
    href?: string;
}

const { title, value, href } = Astro.props;
---
<div class="flex gap-4 items-start">
    <div class="w-12 h-12 rounded-lg bg-sky-600 text-white flex items-center justify-center flex-shrink-0">
        <slot name="icon" />
    </div>
    <div>
        <h3 class="text-base font-bold mb-1 text-sky-600">{title}</h3>
        {href ? (
            <a href={href} class="text-sky-600 underline font-semibold text-base hover:text-sky-700">{value}</a>
        ) : (
            <p class="text-slate-500 text-base">{value}</p>
        )}
    </div>
</div>
