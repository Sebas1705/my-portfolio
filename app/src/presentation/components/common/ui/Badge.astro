---
interface Props {
    text: string;
    variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
    icon?: any;
    class?: string;
}
const { text, variant = 'primary', icon, class: className } = Astro.props;
const variantClasses = {
    primary: 'bg-sky-100 text-sky-600',
    secondary: 'bg-slate-100 text-slate-700',
    success: 'bg-green-100 text-green-600',
    warning: 'bg-amber-100 text-amber-600',
    error: 'bg-red-100 text-red-600',
    info: 'bg-cyan-100 text-cyan-600'
}[variant];
const baseClasses = 'inline-flex items-center gap-2 px-2.5 py-1 rounded-md text-xs font-semibold';
---
<span class={`${baseClasses} ${variantClasses} ${className ?? ''}`}>
    {icon && <span class="inline-flex items-center text-[1.05em]">{icon}</span>}
    {text}
</span>
