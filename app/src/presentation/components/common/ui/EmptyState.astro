---
interface Props {
    message: string;
    icon?: any;
    class?: string;
}
const { message, icon, class: className } = Astro.props;
---
<div class={`flex flex-col items-center justify-center gap-3 text-center ${className ?? ''}`}>
    {icon && <span class="inline-flex items-center text-3xl">{icon}</span>}
    <p class="text-slate-600 dark:text-slate-400">{message}</p>
</div>
