---
interface Props {
    id?: string;
    title?: string;
    subtitle?: string;
    class?: string;
}

const { id, title, subtitle, class: className } = Astro.props;
---

<section id={id} class={`py-12 md:py-16 ${className ?? ''}`}>
    {(title || subtitle) && (
        <header class="mb-6">
            {title && <h2 class="text-center mb-12 text-2xl md:text-3xl font-bold">{title}</h2>}
            {subtitle && <p class="text-center text-lg text-slate-500 mt-2">{subtitle}</p>}
        </header>
    )}
    <div class="mt-4">
        <slot />
    </div>
</section>

