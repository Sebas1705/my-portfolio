---
import type { Skill } from '@/domain';
import SkillCard from './SkillCard.astro';

interface Props {
    skillIds: string[];
    skills: Skill[];
    columns?: number;
    compact?: boolean;
}

const { skillIds, skills, columns = 4, compact = false } = Astro.props;
const cols = Math.max(1, Number(columns));
const lgColsClass = `lg:grid-cols-${cols}`;
const gridClass = `grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 ${lgColsClass}`;
---

<div class={gridClass}>
    {skillIds.map((skillId) => (
        <SkillCard skillId={skillId} skills={skills} compact={compact} />
    ))}
</div>
