</div>

<style>
    /* minimal CSS for checked state and icon transitions (kept small for clarity) */
    .sun-icon, .moon-icon { position: absolute; transition: opacity 300ms, transform 300ms; opacity: 0; pointer-events: none; }
    .sun-icon { left: .5rem; opacity: 1; transform: rotate(0deg) scale(1); color: #fbbf24; filter: drop-shadow(0 1px 2px rgba(0,0,0,0.3)); }
    .moon-icon { right: .5rem; opacity: .3; transform: rotate(-90deg) scale(.6); color: #a7a4a4; }

    /* Use explicit transforms with media queries instead of responsive @apply (safer with @apply limitations) */
    .theme-toggle-input:checked ~ .toggle-slider { transform: translateX(1.1rem); }
    @media (min-width: 480px) { /* xs */
        .theme-toggle-input:checked ~ .toggle-slider { transform: translateX(1.5rem); }
    }
    @media (min-width: 640px) { /* sm */
        .theme-toggle-input:checked ~ .toggle-slider { transform: translateX(1.9rem); }
    }
    @media (min-width: 768px) { /* md */
        .theme-toggle-input:checked ~ .toggle-slider { transform: translateX(2.5rem); }
    }

    .theme-toggle-input:checked ~ .sun-icon { opacity: .2; transform: rotate(90deg) scale(.6); filter: none; }
    .theme-toggle-input:checked ~ .moon-icon { opacity: 1; transform: rotate(0deg) scale(1); color: #818cf8; filter: drop-shadow(0 1px 2px rgba(0,0,0,0.3)); }
</style>

<script>
    const themeToggles = Array.from(document.querySelectorAll('.theme-toggle-input')) as HTMLInputElement[];

    function updateToggleState() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        themeToggles.forEach(t => { t.checked = currentTheme === 'dark'; });
    }

    // Initialize toggle state on page load
    updateToggleState();

    themeToggles.forEach(themeToggle => {
        themeToggle.addEventListener('change', () => {
            const newTheme = themeToggle.checked ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            // update all toggles to reflect the new state
            themeToggles.forEach(t => { if (t !== themeToggle) t.checked = themeToggle.checked; });
        });
    });
</script>
