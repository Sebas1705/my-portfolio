<div class="flex items-center">
    <label class="theme-toggle-label relative inline-flex items-center 
    w-12 xs:w-15 sm:w-18 md:w-22 responsive-header-h
    bg-bg-primary-v border-2 border-primary-v rounded-full cursor-pointer 
    transition-transform duration-200 hover:scale-105 active:scale-95">
        <input
            type="checkbox"
            class="theme-toggle-input sr-only"
            aria-label="Toggle theme"
        />
        <div class="toggle-slider absolute size-3.5 xs:size-5 sm:size-6.5 md:size-9
        bg-primary-dark-v rounded-full left-1.5 xs:left-1.5 sm:left-1.5 md:left-1
        flex items-center justify-center shadow transition-transform duration-500"></div>
        <svg class="sun-icon size-2.5 xs:size-4 sm:size-5.5 md:size-7" viewBox="0 0 24 24" fill="currentColor">
