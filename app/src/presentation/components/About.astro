---
import type { Language } from '@domain/entities/Language';
import type { PersonalInfo } from '@domain/entities/PersonalInfo';
import { translate } from '@infrastructure/i18n';

interface Props {
  lang: Language;
  personalInfo: PersonalInfo;
}

const { lang, personalInfo } = Astro.props;
---

<section id="about" class="section about-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{translate(lang, 'about.title')}</h2>
      <p class="section-subtitle">{translate(lang, 'about.subtitle')}</p>
    </div>

    <div class="about-content">
      <div class="about-image">
        <img 
          src={personalInfo.profileImage} 
          alt={personalInfo.name}
          class="about-photo"
        />
      </div>

      <div class="about-text">
        <h3 class="about-name">{personalInfo.name}</h3>
        <p class="about-title">{personalInfo.title}</p>
        
        <div class="about-description">
          <div class="description-content">
            {translate(lang, 'about.description').split('\n\n').map((paragraph) => (
              <p class="description-paragraph">{paragraph}</p>
            ))}
          </div>
          
          <div class="tech-icons">
            <span class="icon-item" title="TypeScript">
              <svg viewBox="0 0 48 48" width="28" height="28">
                <rect x="4" y="4" width="40" height="40" rx="2" fill="#1E40AF"/>
                <text x="24" y="32" text-anchor="middle" font-size="20" font-weight="bold" fill="white" font-family="Arial">TS</text>
              </svg>
            </span>
            <span class="icon-item" title="React">
              <svg viewBox="0 0 48 48" width="28" height="28">
                <circle cx="24" cy="24" r="20" fill="none" stroke="#61DAFB" stroke-width="2"/>
                <circle cx="24" cy="24" r="3" fill="#61DAFB"/>
                <circle cx="18" cy="18" r="3" fill="#61DAFB"/>
                <circle cx="30" cy="18" r="3" fill="#61DAFB"/>
                <circle cx="24" cy="30" r="3" fill="#61DAFB"/>
              </svg>
            </span>
            <span class="icon-item" title="Node.js">
              <svg viewBox="0 0 48 48" width="28" height="28">
                <path d="M24 4C12.95 4 4 12.95 4 24s8.95 20 20 20 20-8.95 20-20S35.05 4 24 4zm0 3c9.39 0 17 7.61 17 17s-7.61 17-17 17-17-7.61-17-17 7.61-17 17-17zm-2 7v12h4V14zm-6 2l-3 8 3 8h4l-2-8 2-8zm12 0l2 8-2 8h4l3-8-3-8z" fill="#68A063"/>
              </svg>
            </span>
            <span class="icon-item" title="Tailwind">
              <svg viewBox="0 0 48 48" width="28" height="28">
                <path d="M24 4C12.95 4 4 12.95 4 24s8.95 20 20 20 20-8.95 20-20S35.05 4 24 4m-8 14c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4m16 0c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4m-8 10c-3.31 0-6 2.69-6 6s2.69 6 6 6 6-2.69 6-6-2.69-6-6-6" fill="#06B6D4"/>
              </svg>
            </span>
            <span class="icon-item" title="Docker">
              <svg viewBox="0 0 48 48" width="28" height="28">
                <path d="M24 4C12.95 4 4 12.95 4 24s8.95 20 20 20 20-8.95 20-20S35.05 4 24 4m-6 20c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2m4-6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2m4 8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2m4-6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2" fill="#2496ED"/>
              </svg>
            </span>
            <span class="icon-item" title="Git">
              <svg viewBox="0 0 48 48" width="28" height="28">
                <circle cx="24" cy="24" r="20" fill="none" stroke="#F05033" stroke-width="2.5"/>
                <path d="M24 8L32 28H16L24 8" fill="#F05033"/>
              </svg>
            </span>
          </div>
        </div>

        <div class="about-details">
          <div class="detail-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{personalInfo.location}</span>
          </div>

          <div class="detail-item">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <a href={`mailto:${personalInfo.email}`}>{personalInfo.email}</a>
          </div>

          {personalInfo.phone && (
            <div class="detail-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              <a href={`tel:${personalInfo.phone}`}>{personalInfo.phone}</a>
            </div>
          )}
        </div>

        <div class="about-social">
          {personalInfo.socialLinks.github && (
            <a href={personalInfo.socialLinks.github} target="_blank" rel="noopener noreferrer" class="social-button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          )}
          {personalInfo.socialLinks.linkedin && (
            <a href={personalInfo.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="social-button">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              LinkedIn
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    background-color: var(--color-bg-primary);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-3xl);
    align-items: center;
    max-width: 1100px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .about-content {
      grid-template-columns: 1fr 1.5fr;
    }
  }

  .about-image {
    display: flex;
    justify-content: center;
  }

  .about-photo {
    width: 300px;
    height: 300px;
    border-radius: var(--radius-xl);
    object-fit: cover;
    box-shadow: var(--shadow-xl);
    border: 4px solid var(--color-primary);
  }

  @media (min-width: 768px) {
    .about-photo {
      width: 350px;
      height: 350px;
    }
  }

  .about-text {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .about-text {
      text-align: left;
    }
  }

  .about-name {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-sm);
  }

  .about-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--spacing-lg);
  }

  .about-bio {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--spacing-2xl);
  }

  .about-description {
    text-align: left;
    margin-bottom: var(--spacing-2xl);
  }

  .description-content {
    position: relative;
    z-index: 1;
  }

  .description-paragraph {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: var(--spacing-lg);
    text-align: justify;
  }

  .description-paragraph:last-child {
    margin-bottom: 0;
  }

  .tech-icons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    margin-top: var(--spacing-2xl);
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .tech-icons {
      justify-content: flex-start;
    }
  }

  .icon-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    transition: all var(--transition-fast);
    opacity: 0.7;
  }

  .icon-item:hover {
    opacity: 1;
    transform: translateY(-3px);
    border-color: var(--color-primary);
    background-color: var(--color-primary);
    background-color: color-mix(in srgb, var(--color-primary) 10%, var(--color-bg-secondary) 90%);
  }

  .icon-item svg {
    width: 24px;
    height: 24px;
    filter: grayscale(100%);
    opacity: 0.8;
  }

  .icon-item:hover svg {
    filter: grayscale(0%);
    opacity: 1;
  }

  .about-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-2xl);
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    color: var(--color-text-secondary);
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .detail-item {
      justify-content: flex-start;
    }
  }

  .detail-item svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .detail-item a {
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .detail-item a:hover {
    color: var(--color-primary);
  }

  .about-social {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .about-social {
      justify-content: flex-start;
    }
  }

  .social-button {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: 0.75rem 1.5rem;
    background-color: var(--color-bg-secondary);
    color: var(--color-text-primary);
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: all var(--transition-fast);
    border: 2px solid var(--color-border);
  }

  .social-button:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }
</style>
