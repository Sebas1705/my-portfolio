---
import { translate, type Language } from '@/domain';

interface Props {
    lang: Language;
}

import { InMemoryFooterLabelsRepository } from '@/data';
import { GetFooterLabelsUseCase } from '@/domain';
const footerLabels = await new GetFooterLabelsUseCase(new InMemoryFooterLabelsRepository()).execute();

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-white dark:bg-slate-900 border-t border-gray-100 dark:border-slate-700 py-8">
    <div class="max-w-5xl mx-auto px-4 sm:px-6">
        <div class="flex flex-col items-center gap-2 text-center md:flex-row md:justify-between">
            <p class="text-sm text-slate-500">© {currentYear} Sebastián. {translate(footerLabels.rightsReserved, lang)}</p>
            <p class="text-sm text-slate-500">
                {lang === 'es' ? 'Construido con' : 'Built with'} 
                <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-indigo-600 font-semibold hover:text-indigo-500 transition-colors">Astro</a>
                {lang === 'es' ? ' y' : ' and'} ❤️
            </p>
        </div>
    </div>
</footer>
