---
import type { Language } from '@domain/entities/Language';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <p class="footer-text">
        © {currentYear} Sebastián. {lang === 'es' ? 'Todos los derechos reservados.' : 'All rights reserved.'}
      </p>
      <p class="footer-built">
        {lang === 'es' ? 'Construido con' : 'Built with'} 
        <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="footer-link">Astro</a>
        {lang === 'es' ? 'y' : 'and'} ❤️
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-primary);
    background-image: none;
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-2xl) 0;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-text {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .footer-built {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .footer-link {
    color: var(--color-primary);
    font-weight: 600;
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-primary-dark);
  }
</style>
