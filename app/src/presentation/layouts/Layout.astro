---
import type { Language } from '@domain/entities/Language';

interface Props {
  lang?: Language;
  title?: string;
  description?: string;
}

const { 
  lang = 'es', 
  title = 'Sebastián - Full Stack Developer',
  description = 'Portfolio profesional de Sebastián - Desarrollador Full Stack especializado en arquitecturas limpias y soluciones escalables.'
} = Astro.props;

import '../styles/global.css';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <title>{title}</title>
    
    <script is:inline>
      // Initialize theme before page loads to prevent flash
      const getThemePreference = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      };
      
      const theme = getThemePreference();
      document.documentElement.setAttribute('data-theme', theme);
    </script>
    
    <script is:inline>
      // Initialize language from localStorage
      // Get the current language from the URL
      const currentPath = window.location.pathname;
      const pathSegments = currentPath.split('/').filter(Boolean);
      const supportedLanguages = ['es', 'en', 'fr', 'de', 'it', 'pt', 'nl', 'pl', 'ru', 'ja'];
      const currentUrlLang = pathSegments[0] && supportedLanguages.includes(pathSegments[0]) ? pathSegments[0] : null;
      
      // Get saved language from localStorage
      const savedLanguage = typeof localStorage !== 'undefined' ? localStorage.getItem('language') : null;
      
      // Determine which language to use and whether to redirect
      const browserLang = navigator.language.split('-')[0];
      let targetLanguage = 'es'; // Default language
      let shouldRedirect = false;
      
      if (savedLanguage && supportedLanguages.includes(savedLanguage)) {
        targetLanguage = savedLanguage;
        // Redirect if the URL lang doesn't match the saved language
        if (currentUrlLang !== savedLanguage) {
          shouldRedirect = true;
        }
      } else if (supportedLanguages.includes(browserLang)) {
        targetLanguage = browserLang;
        // Save browser language preference
        if (typeof localStorage !== 'undefined') {
          localStorage.setItem('language', targetLanguage);
        }
        // Redirect if the URL lang doesn't match
        if (currentUrlLang !== targetLanguage) {
          shouldRedirect = true;
        }
      } else if (currentUrlLang) {
        // If URL has a language, use and save it
        targetLanguage = currentUrlLang;
        if (typeof localStorage !== 'undefined') {
          localStorage.setItem('language', targetLanguage);
        }
      } else {
        // Save default language
        if (typeof localStorage !== 'undefined') {
          localStorage.setItem('language', targetLanguage);
        }
      }
      
      // Perform redirect if necessary
      if (shouldRedirect && currentUrlLang !== targetLanguage) {
        // Remove current language from path if present
        let newPath = currentPath;
        if (currentUrlLang) {
          newPath = currentPath.replace(new RegExp(`^/${currentUrlLang}(/|$)`), '/');
        }
        // Add target language to path
        const finalPath = `/${targetLanguage}${newPath === '/' ? '' : newPath}`;
        window.location.href = finalPath;
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
